{
  "name": "@slergberg/react-hook-use-store",
  "version": "0.1.3",
  "description": "Highly opinionated and simple store builder for React",
  "keywords": [
    "context",
    "hooks",
    "react",
    "reactjs",
    "state",
    "store"
  ],
  "license": "MIT",
  "author": "Rodrigo Scomação do Nascimento <rodrigo.sc.na@gmail.com> (https://github.com/rodrigoscna)",
  "homepage": "https://github.com/slergberg/react-hook-use-store",
  "repository": "github:slergberg/react-hook-use-store",
  "bugs": "https://github.com/slergberg/react-hook-use-store/issues",
  "main": "./lib/index.js",
  "unpkg": "dist/react-hook-use-store.js",
  "module": "es/index.js",
  "files": [
    "dist",
    "es",
    "lib",
    "src"
  ],
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-transform-runtime": "7.6.2",
    "@babel/preset-env": "^7.7.1",
    "babel-eslint": "^10.0.3",
    "cross-env": "^6.0.3",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "npm-check-updates": "^3.2.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "react": "^16.10.2",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.2"
  },
  "scripts": {
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "babel src --out-dir es",
    "build:umd": "cross-env NODE_ENV=development rollup -c -o dist/react-hook-use-store.js",
    "build:umd:min": "cross-env NODE_ENV=production rollup -c -o dist/react-hook-use-store.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "clean": "rimraf lib dist es coverage",
    "lint": "eslint src test",
    "prepare": "npm run clean",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": [
      "airbnb",
      "prettier"
    ],
    "parser": "babel-eslint",
    "rules": {
      "import/prefer-default-export": "off",
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>test/jest.setup.js"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
